@page "{id:int}"
@model IndustrialDataManagement.Pages.Plcs.EditModel
@{
    ViewData["Title"] = "PLC Düzenle";
}

<div class="card shadow-sm mt-3">
    <div class="card-header bg-warning text-dark">
        <h4 class="mb-0">PLC Kaydı Düzenle</h4>
    </div>
    <div class="card-body">
        <form method="post">
            <input type="hidden" asp-for="Plc.Id" />
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label">PLC Adı</label>
                    <input asp-for="Plc.Name" class="form-control" required placeholder="Fırın PLC 1" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">IP Adresi</label>
                    <input asp-for="Plc.IpAddress" class="form-control" required placeholder="192.168.1.50" />
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4">
                    <label class="form-label">Port</label>
                    <input asp-for="Plc.Port" class="form-control" type="number" required />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Protokol</label>
                    <select asp-for="Plc.Protocol" class="form-select">
                        <option value="ModbusTCP">Modbus TCP</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Timeout (ms)</label>
                    <input asp-for="Plc.TimeoutMs" class="form-control" type="number" required />
                </div>
            </div>
            <div class="row mb-4">
                <div class="col-md-6">
                    <label class="form-label">Hata Tekrar Deneme Sayısı (Retry)</label>
                    <input asp-for="Plc.RetryCount" class="form-control" type="number" required />
                </div>
                <div class="col-md-6 d-flex align-items-end">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="Plc.IsActive" />
                        <label class="form-check-label">Aktif (Veri Toplanacak)</label>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-between">
                <a asp-page="Index" class="btn btn-secondary">Geri Dön</a>
                <button type="submit" class="btn btn-warning">Güncelle</button>
            </div>
        </form>
    </div>
</div>
