@page
@model IndustrialDataManagement.Pages.Plcs.IndexModel
@{
    ViewData["Title"] = "PLC Listesi";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>PLC Cihazları</h2>
    <a asp-page="./Create" class="btn btn-primary">Yeni PLC Ekle</a>
</div>

@Html.AntiForgeryToken()

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Adı</th>
            <th>IP Adresi</th>
            <th>Port</th>
            <th>Protokol</th>
            <th>Durum</th>
            <th class="text-center">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Plcs)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.IpAddress</td>
                <td>@item.Port</td>
                <td>@item.Protocol</td>
                <td>
                    @if (item.IsActive)
                    {
                        <span class="badge bg-success">Aktif</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Pasif</span>
                    }
                </td>
                <td class="text-center">
                    <button type="button" class="btn btn-sm btn-info test-btn" data-ip="@item.IpAddress" data-port="@item.Port">Test Et</button>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Test Sonucu Toast (Bildirim) -->
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
  <div id="testToast" class="toast hide" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
      <strong class="me-auto" id="toastTitle">Bağlantı Testi</strong>
      <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    <div class="toast-body" id="toastMessage">
      Test ediliyor...
    </div>
  </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            var toastElList = [].slice.call(document.querySelectorAll('.toast'))
            var toastList = toastElList.map(function (toastEl) {
              return new bootstrap.Toast(toastEl, { autohide: false })
            })

            $(".test-btn").click(function() {
                var btn = $(this);
                var ip = btn.data("ip");
                var port = btn.data("port");
                
                btn.prop("disabled", true).text("Bekleyin...");
                
                var myToast = document.getElementById('testToast');
                var bsToast = bootstrap.Toast.getInstance(myToast) || new bootstrap.Toast(myToast);
                $("#toastTitle").text(ip + ":" + port);
                $("#toastMessage").text("Modbus TCP bağlantısı deneniyor... Lütfen bekleyin.");
                $("#testToast").removeClass("bg-success bg-danger text-white");
                bsToast.show();

                $.ajax({
                    type: "POST",
                    url: "?handler=TestConnection",
                    data: { ipAddress: ip, port: port },
                    headers: { "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val() },
                    success: function (res) {
                        btn.prop("disabled", false).text("Test Et");
                        if (res.success) {
                            $("#testToast").addClass("bg-success text-white");
                            $("#toastMessage").text("Başarılı! PLC'ye erişim sağlandı.");
                        } else {
                            $("#testToast").addClass("bg-danger text-white");
                            $("#toastMessage").text("Hata: " + res.message);
                        }
                    },
                    error: function () {
                        btn.prop("disabled", false).text("Test Et");
                        $("#testToast").addClass("bg-danger text-white");
                        $("#toastMessage").text("Sunucu hatası oluştu.");
                    }
                });
            });
        });
    </script>
}
