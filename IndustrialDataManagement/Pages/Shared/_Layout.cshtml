@using IndustrialDataManagement.Data
@inject AppDbContext db
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - İSKİ Ömerli Veri Yönetimi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IndustrialDataManagement.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand fw-bold text-primary" asp-area="" asp-page="/Index">
                    <i class="bi bi-droplet-fill me-2"></i>İSKİ Ömerli Veri Yönetimi
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 align-items-center">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Plcs/Index">PLC Yönetimi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Tables/Index">İzleme Tabloları</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Tags/Index">Tag Yönetimi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white bg-success rounded px-2 me-2" asp-area="" asp-page="/Measurements/Index">Canlı Veri Akışı</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white bg-danger rounded px-2" asp-area="" asp-page="/Logs/Index">Sistem Logları</a>
                        </li>
                    </ul>

                    <div class="d-flex align-items-center me-3">
                        @{
                            var hasPending = await db.HasPendingChangesAsync();
                        }
                        @if (hasPending)
                        {
                            <form method="post" asp-page="/Index" asp-page-handler="ReloadCollector" class="d-inline" onsubmit="return confirm('Sistem konfigürasyonu yeniden yüklenecek. Emin misiniz?');">
                                <button type="submit" class="btn btn-warning btn-sm fw-bold shadow-sm blink-status">
                                    <i class="bi bi-cpu-fill me-1"></i> Değişiklikleri Uygula
                                </button>
                            </form>
                        }
                    </div>
                    
                    
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <div class="dropdown">
                            <button class="btn btn-outline-primary dropdown-toggle rounded-pill px-3" type="button" id="userMenu" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle me-1"></i> @(User.FindFirst("FullName")?.Value ?? User.Identity.Name)
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end shadow border-0 mt-2 rounded-3" aria-labelledby="userMenu">
                                <li>
                                    <a class="dropdown-item py-2" asp-page="/Account/ChangePassword">
                                        <i class="bi bi-shield-lock me-2"></i> Şifre Değiştir
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item py-2 text-danger" asp-page="/Account/Logout">
                                        <i class="bi bi-box-arrow-right me-2"></i> Güvenli Çıkış
                                    </a>
                                </li>
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show shadow-sm border-0 mb-4" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i>
                    @TempData["Message"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show shadow-sm border-0 mb-4" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - İSKİ Ömerli Veri Yönetimi - <a asp-area="" asp-page="/Privacy">Sistem Hakkında</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>