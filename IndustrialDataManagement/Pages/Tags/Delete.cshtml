@page
@model IndustrialDataManagement.Pages.Tags.DeleteModel
@{
    ViewData["Title"] = "Tag Sil";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-4">
                    <h3 class="text-danger mb-3"><i class="bi bi-trash3 me-2"></i>Tag Silme Onayı</h3>
                    <p class="text-muted">Aşağıdaki tag'i silmek istediğinizden emin misiniz?</p>
                    
                    <div class="bg-light p-3 rounded-3 mb-4">
                        <div class="mb-2"><strong>Tag Adı:</strong> @Model.TagToDelete?.Name</div>
                        <div class="mb-2"><strong>Adres:</strong> @Model.TagToDelete?.PlcAddress</div>
                        <div><strong>Veri Tipi:</strong> @Model.TagToDelete?.DataType</div>
                    </div>

                    <form method="post">
                        <input type="hidden" asp-for="TagToDelete!.Id" name="id" />
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger px-4">Evet, Sil</button>
                            <a asp-page="./Index" asp-route-tableId="@Model.TagToDelete?.MonitoringTableId" class="btn btn-light px-4">Vazgeç</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
