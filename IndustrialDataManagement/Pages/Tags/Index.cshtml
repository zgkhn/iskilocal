@page
@model IndustrialDataManagement.Pages.Tags.IndexModel
@{
    // ViewData ile Table bilgisi de aktarılabilir.
    ViewData["Title"] = "Tag Listesi";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Tag Yönetimi</h2>
    @if (Model.TableId.HasValue)
    {
        <a asp-page="./Create" asp-route-tableId="@Model.TableId" class="btn btn-primary">Yeni Tag Ekle</a>
    }
</div>

@if (!Model.TableId.HasValue)
{
    <div class="alert alert-warning">Tag'leri görebilmek için önce İzleme Tabloları sayfasından bir tablo seçmelisiniz.</div>
    <a asp-page="/Tables/Index" class="btn btn-secondary">Tablolara Git</a>
}
else
{
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Tag Adı</th>
                <th>PLC Adres (Register)</th>
                <th>Veri Tipi</th>
                <th>Birim</th>
                <th>Açıklama</th>
                <th>Durum</th>
                <th class="text-center">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Tags)
            {
                <tr>
                    <td>@item.Id</td>
                    <td><strong>@item.Name</strong></td>
                    <td>@item.PlcAddress</td>
                    <td><span class="badge bg-secondary">@item.DataType</span></td>
                    <td>@item.Unit</td>
                    <td>@item.Description</td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="badge bg-success">Aktif</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Pasif</span>
                        }
                    </td>
                    <td class="text-center">
                        <button type="button" class="btn btn-sm btn-info test-tag-btn" data-tagid="@item.Id">Değer Oku</button>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Test Sonucu Toast (Bildirim) -->
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
      <div id="testToast" class="toast hide" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
          <strong class="me-auto" id="toastTitle">Canlı Tag Değeri</strong>
          <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body" id="toastMessage">
          PLC'den okunuyor...
        </div>
      </div>
    </div>
    
    @Html.AntiForgeryToken()
}

@section Scripts {
    <script>
        $(document).ready(function() {
            var toastElList = [].slice.call(document.querySelectorAll('.toast'));
            var toastList = toastElList.map(function (toastEl) {
              return new bootstrap.Toast(toastEl, { autohide: false });
            });

            $(".test-tag-btn").click(function() {
                var btn = $(this);
                var tagId = btn.data("tagid");
                
                btn.prop("disabled", true).text("Okunuyor...");
                
                var myToast = document.getElementById('testToast');
                var bsToast = bootstrap.Toast.getInstance(myToast) || new bootstrap.Toast(myToast);
                $("#toastTitle").text("Tag ID: " + tagId);
                $("#toastMessage").text("Modbus TCP üzerinden canlı değer okunuyor... Lütfen bekleyin.");
                $("#testToast").removeClass("bg-success bg-danger text-white");
                bsToast.show();

                $.ajax({
                    type: "POST",
                    url: "?handler=ReadTagValue",
                    data: { tagId: tagId },
                    headers: { "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val() },
                    success: function (res) {
                        btn.prop("disabled", false).text("Değer Oku");
                        if (res.success) {
                            $("#testToast").addClass("bg-success text-white");
                            $("#toastMessage").text("Okunan Değer: " + res.value + " " + (res.unit || ""));
                        } else {
                            $("#testToast").addClass("bg-danger text-white");
                            $("#toastMessage").text("Hata: " + res.message);
                        }
                    },
                    error: function () {
                        btn.prop("disabled", false).text("Değer Oku");
                        $("#testToast").addClass("bg-danger text-white");
                        $("#toastMessage").text("Sunucu hatası oluştu.");
                    }
                });
            });
        });
    </script>
}
