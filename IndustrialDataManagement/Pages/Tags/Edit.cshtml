@page
@model IndustrialDataManagement.Pages.Tags.EditModel
@{
    ViewData["Title"] = "Tag Düzenle";
}

<div class="card shadow-sm mt-3">
    <div class="card-header bg-warning text-dark">
        <h4 class="mb-0">Tag Düzenle: @Model.Tag.Name</h4>
    </div>
    <div class="card-body">
        <form method="post">
            <input type="hidden" asp-for="Tag.Id" />
            <input type="hidden" asp-for="Tag.MonitoringTableId" />
            <input type="hidden" id="PlcId" value="@Model.PlcId" />
            
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label">Tag Adı</label>
                    <input asp-for="Tag.Name" class="form-control" required />
                </div>
                <div class="col-md-6">
                    <label class="form-label">PLC Adresi (Register)</label>
                    <input asp-for="Tag.PlcAddress" class="form-control" required />
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4">
                    <label class="form-label">Veri Tipi</label>
                    <select asp-for="Tag.DataType" class="form-select" id="DataType">
                        <option value="float">Float / REAL (32-bit)</option>
                        <option value="int">Integer / INT (16-bit)</option>
                        <option value="dint">DInt / INT32 (32-bit)</option>
                        <option value="uint">UInt / UINT16 (16-bit)</option>
                        <option value="udint">UDInt / UINT32 (32-bit)</option>
                        <option value="bool">Boolean / BOOL (Bit)</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Ölçüm Birimi</label>
                    <input asp-for="Tag.Unit" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Açıklama</label>
                    <input asp-for="Tag.Description" class="form-control" />
                </div>
            </div>
            <div class="row mb-4">
                <div class="col-md-12 d-flex align-items-center">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="Tag.IsActive" />
                        <label class="form-check-label">Aktif</label>
                    </div>
                </div>
            </div>
            <div class="row mb-3" id="testResultArea" style="display:none;">
                <div class="col-md-12">
                    <div class="alert alert-info d-flex justify-content-between align-items-center mb-0">
                        <span id="testResultText">PLC Değeri: --</span>
                        <span id="testTime" class="small text-muted"></span>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <div>
                    <a asp-page="./Index" asp-route-tableId="@Model.Tag.MonitoringTableId" class="btn btn-secondary">Geri Dön</a>
                    <button type="button" id="btnTest" class="btn btn-info ms-2">Değer Test Et</button>
                </div>
                <button type="submit" class="btn btn-success">Güncelle</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $("#btnTest").click(function() {
                var plcId = $("#PlcId").val();
                var address = $("input[name='Tag.PlcAddress']").val();
                var dataType = $("#DataType").val();

                if(!address) {
                    alert("Lütfen önce bir PLC adresi giriniz.");
                    return;
                }

                $("#btnTest").prop("disabled", true).text("Test Ediliyor...");
                $("#testResultArea").show();
                $("#testResultText").text("PLC'den okunuyor...");
                
                $.ajax({
                    type: "POST",
                    url: "/Tags/Index?handler=TestTagValue",
                    data: { plcId: plcId, address: address, dataType: dataType },
                    headers: { "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val() },
                    success: function (res) {
                        $("#btnTest").prop("disabled", false).text("Değer Test Et");
                        if (res.success) {
                            $("#testResultText").html("<strong>Okunan Değer:</strong> " + res.value);
                            $("#testTime").text(new Date().toLocaleTimeString());
                        } else {
                            $("#testResultText").text("Hata: " + res.message);
                        }
                    },
                    error: function () {
                        $("#btnTest").prop("disabled", false).text("Değer Test Et");
                        $("#testResultText").text("Sunucu hatası veya bağlantı problemi.");
                    }
                });
            });
        });
    </script>
}
