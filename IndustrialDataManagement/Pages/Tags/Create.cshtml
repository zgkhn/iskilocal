@page
@model IndustrialDataManagement.Pages.Tags.CreateModel
@{
    ViewData["Title"] = "Yeni Tag Ekle";
}

<div class="card shadow-sm mt-3">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Yeni Tag Ekle</h4>
    </div>
    <div class="card-body">
        <form method="post">
            <input type="hidden" asp-for="Tag.MonitoringTableId" />
            
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label">Tag Adı</label>
                    <input asp-for="Tag.Name" class="form-control" required placeholder="Firin_Sicaklik_1" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">PLC Adresi (Register)</label>
                    <input asp-for="Tag.PlcAddress" class="form-control" required placeholder="40001" />
                    <small class="text-muted">Örnek: Modbus için 40001, 30010 benzeri okunacak adres/offset konumu.</small>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4">
                    <label class="form-label">Veri Tipi</label>
                    <select asp-for="Tag.DataType" class="form-select">
                        <option value="float">Float (32-bit)</option>
                        <option value="int">Integer (16/32-bit)</option>
                        <option value="bool">Boolean (Bit)</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Ölçüm Birimi</label>
                    <input asp-for="Tag.Unit" class="form-control" placeholder="°C, Bar, kg vb." />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Açıklama</label>
                    <input asp-for="Tag.Description" class="form-control" placeholder="Opsiyonel detay" />
                </div>
            </div>
            <div class="row mb-4">
                <div class="col-md-12 d-flex align-items-center">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="Tag.IsActive" checked />
                        <label class="form-check-label">Aktif (Veri okunsun ve DB'ye kaydedilsin)</label>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-between">
                <a asp-page="Index" asp-route-tableId="@Model.Tag.MonitoringTableId" class="btn btn-secondary">Geri Dön</a>
                <button type="submit" class="btn btn-success">Kaydet</button>
            </div>
        </form>
    </div>
</div>
