@page
@model IndustrialDataManagement.Pages.Logs.IndexModel
@{
    ViewData["Title"] = "Sistem Logları";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center my-4">
        <div>
            <h2 class="fw-bold mb-0 text-dark">
                <i class="bi bi-journal-text text-danger me-2"></i>Sistem Logları
            </h2>
            <p class="text-muted mb-0 small">Sistem olaylarını ve hatalarını buradan takip edebilirsiniz.</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-page="/Logs/Index" class="btn btn-outline-secondary border-2 fw-bold shadow-sm">
                <i class="bi bi-eraser me-1"></i> Filtreleri Temizle
            </a>
            <button class="btn btn-primary border-0 fw-bold px-4 shadow-sm" onclick="location.reload();">
                <i class="bi bi-arrow-clockwise me-1"></i> Sayfayı Yenile
            </button>
            <button type="button" class="btn btn-danger border-0 fw-bold px-4 shadow-sm" data-bs-toggle="modal" data-bs-target="#clearLogsModal">
                <i class="bi bi-trash-fill me-1"></i> Logları Temizle
            </button>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Filtreleme Paneli -->
    <div class="card shadow-sm border-0 rounded-3 mb-4 bg-light">
        <div class="card-body p-3">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-2">
                    <label class="form-label small fw-bold text-secondary text-uppercase">Hata Seviyesi</label>
                    <select asp-for="Level" class="form-select form-select-sm border-2">
                        <option value="">Tümü</option>
                        <option value="INFO">BİLGİ (INFO)</option>
                        <option value="WARNING">UYARI (WARNING)</option>
                        <option value="ERROR">HATA (ERROR)</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label small fw-bold text-secondary text-uppercase">Cihaz (PLC)</label>
                    <select asp-for="PlcId" class="form-select form-select-sm border-2" asp-items="@(new SelectList(Model.Plcs, "Id", "Name"))">
                        <option value="">Tüm Cihazlar</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label small fw-bold text-secondary text-uppercase">Başlangıç Tarihi</label>
                    <input asp-for="StartDate" type="datetime-local" class="form-control form-control-sm border-2" />
                </div>
                <div class="col-md-3">
                    <label class="form-label small fw-bold text-secondary text-uppercase">Bitiş Tarihi</label>
                    <input asp-for="EndDate" type="datetime-local" class="form-control form-control-sm border-2" />
                </div>
                <div class="col-md-2 d-grid">
                    <button type="submit" class="btn btn-dark btn-sm fw-bold">
                        <i class="bi bi-filter me-1"></i> Uygula
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Log Tablosu ve Sayfalama -->
    <div class="card shadow-sm border-0 rounded-3 overflow-hidden">
        <div class="card-header bg-white py-3 border-0 d-flex justify-content-between align-items-center">
            <span class="text-muted small">Toplam <strong>@Model.TotalCount</strong> kayıt bulundu.</span>
            <span class="text-muted small">Sayfa: <strong>@Model.CurrentPage</strong> / @Model.TotalPages</span>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0 border-0">
                    <thead class="bg-light text-secondary">
                        <tr class="border-bottom">
                            <th class="ps-4 py-3 text-uppercase small fw-bold" style="width: 220px;">Tarih ve Saat</th>
                            <th class="py-3 text-uppercase small fw-bold" style="width: 120px;">Seviye</th>
                            <th class="py-3 text-uppercase small fw-bold">Log Mesajı</th>
                            <th class="py-3 text-uppercase small fw-bold" style="width: 180px;">Kaynak Cihaz</th>
                            <th class="py-3 text-center text-uppercase small fw-bold" style="width: 100px;">Hata</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Logs.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 border-0">
                                    <div class="py-4">
                                        <i class="bi bi-clipboard-x text-muted display-1 d-block mb-3"></i>
                                        <h5 class="text-muted fw-light">Herhangi bir kayıt bulunamadı.</h5>
                                    </div>
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var log in Model.Logs)
                            {
                                var badgeStyle = log.Level switch
                                {
                                    "ERROR" => "badge-danger-soft text-danger",
                                    "WARNING" => "badge-warning-soft text-warning",
                                    "INFO" => "badge-info-soft text-info",
                                    _ => "bg-light text-dark"
                                };
                                
                                <tr class="log-row">
                                    <td class="ps-4 text-secondary monospace small">
                                        <span class="opacity-75">@log.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy")</span>
                                        <strong class="text-dark">@log.CreatedAt.ToLocalTime().ToString(" HH:mm:ss")</strong>
                                    </td>
                                    <td>
                                        <span class="badge rounded-pill px-3 py-2 fw-bold @badgeStyle" style="min-width: 80px;">
                                            @log.Level
                                        </span>
                                    </td>
                                    <td class="fw-medium text-dark py-3">@log.Message</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(log.PlcName))
                                        {
                                            <span class="badge bg-white text-dark border px-2 py-1 fw-normal">
                                                <i class="bi bi-cpu-fill me-1 text-primary"></i> @log.PlcName
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted small italic">Sistem Servisi</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (!string.IsNullOrEmpty(log.Exception))
                                        {
                                            <button class="btn btn-sm btn-light border shadow-sm rounded-circle" 
                                                    type="button" data-bs-toggle="collapse" data-bs-target="#exp-@log.Id">
                                                <i class="bi bi-chevron-down"></i>
                                            </button>
                                        }
                                    </td>
                                </tr>
                                @if (!string.IsNullOrEmpty(log.Exception))
                                {
                                    <tr class="collapse border-0" id="exp-@log.Id">
                                        <td colspan="5" class="bg-light p-0 border-0">
                                            <div class="mx-4 my-3 p-3 bg-white rounded border border-danger-subtle shadow-sm">
                                                <div class="d-flex align-items-center mb-2 text-danger fw-bold border-bottom pb-2">
                                                    <i class="bi bi-bug me-2"></i> Teknik Detay
                                                </div>
                                                <pre class="small monospace text-danger-emphasis mb-0 m-0 py-2 overflow-auto" style="max-height: 200px; white-space: pre-wrap;">@log.Exception</pre>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        
        <!-- Sayfalama Alt Bölüm -->
        @if (Model.TotalPages > 1)
        {
            <div class="card-footer bg-white border-top-0 py-3">
                <nav aria-label="Log sayfaları">
                    <ul class="pagination pagination-sm justify-content-center mb-0">
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" asp-all-route-data='new Dictionary<string, string> { { "CurrentPage", (Model.CurrentPage - 1).ToString() }, { "Level", Model.Level ?? "" }, { "PlcId", Model.PlcId?.ToString() ?? "" }, { "StartDate", Model.StartDate?.ToString("yyyy-MM-ddTHH:mm") ?? "" }, { "EndDate", Model.EndDate?.ToString("yyyy-MM-ddTHH:mm") ?? "" } }' aria-label="Önceki">
                                <span aria-hidden="true">&laquo; Önceki</span>
                            </a>
                        </li>

                        @for (var i = 1; i <= Model.TotalPages; i++)
                        {
                            if (i == 1 || i == Model.TotalPages || (i >= Model.CurrentPage - 2 && i <= Model.CurrentPage + 2))
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" asp-all-route-data='new Dictionary<string, string> { { "CurrentPage", i.ToString() }, { "Level", Model.Level ?? "" }, { "PlcId", Model.PlcId?.ToString() ?? "" }, { "StartDate", Model.StartDate?.ToString("yyyy-MM-ddTHH:mm") ?? "" }, { "EndDate", Model.EndDate?.ToString("yyyy-MM-ddTHH:mm") ?? "" } }'>@i</a>
                                </li>
                            }
                            else if (i == Model.CurrentPage - 3 || i == Model.CurrentPage + 3)
                            {
                                <li class="page-item disabled"><span class="page-link">...</span></li>
                            }
                        }

                        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link" asp-all-route-data='new Dictionary<string, string> { { "CurrentPage", (Model.CurrentPage + 1).ToString() }, { "Level", Model.Level ?? "" }, { "PlcId", Model.PlcId?.ToString() ?? "" }, { "StartDate", Model.StartDate?.ToString("yyyy-MM-ddTHH:mm") ?? "" }, { "EndDate", Model.EndDate?.ToString("yyyy-MM-ddTHH:mm") ?? "" } }' aria-label="Sonraki">
                                <span aria-hidden="true">Sonraki &raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>

<!-- Log Temizleme Modalı -->
<div class="modal fade" id="clearLogsModal" tabindex="-1" aria-labelledby="clearLogsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-danger text-white border-0">
                <h5 class="modal-title fw-bold" id="clearLogsModalLabel">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> Tüm Loglar Silinecek
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-page-handler="ClearLogs">
                <div class="modal-body p-4">
                    <p class="text-secondary fw-medium mb-4">
                        Bu işlem geri alınamaz. Devam etmek için lütfen yönetici şifresini giriniz.
                    </p>
                    <div class="form-floating mb-3">
                        <input type="password" name="password" class="form-control border-2" id="adminPassword" placeholder="Şifre" required>
                        <label for="adminPassword" class="text-secondary">Yönetici Şifresi</label>
                    </div>
                </div>
                <div class="modal-footer border-0 p-4 pt-0">
                    <button type="button" class="btn btn-light fw-bold px-4" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-danger fw-bold px-4 shadow-sm">
                        <i class="bi bi-trash-fill me-1"></i> Verileri Sil
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .monospace { font-family: 'SFMono-Regular', Consolas, 'Liberation Mono', Menlo, monospace; }
    .log-row:hover { background-color: rgba(0,0,0,0.01); }
    
    .badge-danger-soft { background-color: #fceaea; }
    .badge-warning-soft { background-color: #fff8e6; }
    .badge-info-soft { background-color: #e6f7ff; }
    
    .italic { font-style: italic; }
    .small { font-size: 0.875rem; }
    
    .table thead th {
        font-size: 0.7rem;
        letter-spacing: 0.05rem;
    }
    .pagination .page-link { border: 0; margin: 0 2px; border-radius: 4px; color: #333; font-weight: bold; }
    .pagination .page-item.active .page-link { background-color: #333; color: #fff; }
</style>
