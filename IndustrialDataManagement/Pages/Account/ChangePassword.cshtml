@page
@model IndustrialDataManagement.Pages.Account.ChangePasswordModel
@{
    ViewData["Title"] = "Şifre Değiştir";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0 rounded-4">
                <div class="card-header bg-white border-0 pt-4 pb-0 text-center">
                    <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 64px; height: 64px;">
                        <i class="bi bi-shield-lock text-primary fs-2"></i>
                    </div>
                    <h3 class="fw-bold text-dark">Şifremi Değiştir</h3>
                    <p class="text-muted small">Güvenliğiniz için düzenli olarak şifrenizi güncelleyin.</p>
                </div>
                <div class="card-body p-4 pt-2">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger border-0 shadow-sm rounded-3 mb-4">
                            <i class="bi bi-exclamation-triangle me-2"></i> @Model.ErrorMessage
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <div class="alert alert-success border-0 shadow-sm rounded-3 mb-4">
                            <i class="bi bi-check-circle me-2"></i> @Model.SuccessMessage
                        </div>
                    }

                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label small fw-bold text-muted">Mevcut Şifre</label>
                            <input type="password" asp-for="CurrentPassword" class="form-control form-control-lg rounded-3 fs-6" required />
                        </div>
                        <hr class="my-4 opacity-10">
                        <div class="mb-3">
                            <label class="form-label small fw-bold text-muted">Yeni Şifre</label>
                            <input type="password" asp-for="NewPassword" class="form-control form-control-lg rounded-3 fs-6" required />
                        </div>
                        <div class="mb-4">
                            <label class="form-label small fw-bold text-muted">Yeni Şifre (Tekrar)</label>
                            <input type="password" asp-for="ConfirmPassword" class="form-control form-control-lg rounded-3 fs-6" required />
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg fw-bold rounded-3 py-3">
                                ŞİFREYİ GÜNCELLE
                            </button>
                            <a asp-page="/Index" class="btn btn-light btn-lg text-muted fw-semibold rounded-3 py-3 mt-2">
                                <i class="bi bi-arrow-left me-1"></i> Vazgeç
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-control-lg:focus {
        border-color: #0d3b66;
        box-shadow: 0 0 0 0.25rem rgba(13, 59, 102, 0.1);
    }
</style>
