@page
@model IndustrialDataManagement.Pages.Tables.CreateModel
@{
    ViewData["Title"] = "Yeni Tablo Ekle";
}

<div class="card shadow-sm mt-3">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Yeni İzleme Tablosu Kaydı</h4>
    </div>
    <div class="card-body">
        <form method="post">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label">Tablo (Grup) Adı</label>
                    <input asp-for="Table.Name" class="form-control" required placeholder="Fırın Sıcaklıkları" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Bağlanacak PLC</label>
                    <select asp-for="Table.PlcId" class="form-select" asp-items="Model.PlcList" required>
                        <option value="">-- PLC Seçiniz --</option>
                    </select>
                </div>
            </div>
            <div class="row mb-4">
                <div class="col-md-6">
                    <label class="form-label">Okuma Periyodu (Senkronize)</label>
                    <select asp-for="Table.PollingIntervalMs" class="form-select" required>
                        <option value="60000">1 Dakika</option>
                        <option value="600000">10 Dakika</option>
                        <option value="1800000">30 Dakika</option>
                        <option value="3600000">1 Saat</option>
                        <option value="7200000">2 Saat</option>
                        <option value="14400000">4 Saat</option>
                        <option value="28800000">8 Saat</option>
                        <option value="43200000">12 Saat</option>
                        <option value="57600000">16 Saat</option>
                        <option value="86400000">24 Saat</option>
                    </select>
                    <small class="text-muted">Veriler seçilen periyodun tam basamaklarında (örn. 10:00:00) senkronize şekilde toplanacaktır.</small>
                </div>
                <div class="col-md-6 d-flex align-items-center mt-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="Table.IsActive" checked />
                        <label class="form-check-label">Aktif (Okuma başlasın)</label>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-between">
                <a asp-page="Index" class="btn btn-secondary">Geri Dön</a>
                <button type="submit" class="btn btn-success">Kaydet</button>
            </div>
        </form>
    </div>
</div>
