@page
@model IndustrialDataManagement.Pages.Tables.IndexModel
@{
    ViewData["Title"] = "İzleme Tabloları";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>İzleme Tabloları (Monitoring Tables)</h2>
    <a asp-page="./Create" class="btn btn-primary">Yeni Tablo Ekle</a>
</div>

<div class="alert alert-info">
    <strong>Bilgi:</strong> Birden fazla tablo oluşturabilirsiniz. Her tablonun güncelleme/okuma (Polling) süresi ms cinsinden birbirinden bağımsızdır.
</div>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Tablo Adı</th>
            <th>Bağlı PLC</th>
            <th>Polling (ms)</th>
            <th>Durum</th>
            <th class="text-center">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Tables)
        {
            <tr>
                <td>@item.Id</td>
                <td><strong>@item.Name</strong></td>
                <td>@item.PlcName</td>
                <td>@item.PollingIntervalMs ms</td>
                <td>
                    @if (item.IsActive)
                    {
                        <span class="badge bg-success">Aktif</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Pasif</span>
                    }
                </td>
                <td class="text-center">
                    <a asp-page="/Tags/Index" asp-route-tableId="@item.Id" class="btn btn-sm btn-info">Tag'leri Gör</a>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
