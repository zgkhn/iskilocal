@page "{id:int}"
@model IndustrialDataManagement.Pages.Tables.EditModel
@{
    ViewData["Title"] = "Tablo Düzenle";
}

<div class="card shadow-sm mt-3">
    <div class="card-header bg-warning text-dark">
        <h4 class="mb-0">İzleme Tablosu Düzenle</h4>
    </div>
    <div class="card-body">
        <form method="post">
            <input type="hidden" asp-for="Table.Id" />
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label">Tablo (Grup) Adı</label>
                    <input asp-for="Table.Name" class="form-control" required placeholder="Fırın Sıcaklıkları" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Bağlanacak PLC</label>
                    <select asp-for="Table.PlcId" class="form-select" asp-items="Model.PlcList" required>
                        <option value="">-- PLC Seçiniz --</option>
                    </select>
                </div>
            </div>
            <div class="row mb-4">
                <div class="col-md-6">
                    <label class="form-label">Okuma Süresi (Polling ms)</label>
                    <input asp-for="Table.PollingIntervalMs" class="form-control" type="number" required />
                    <small class="text-muted">Bu tablodaki verilerin PLC'den kaç milisaniyede bir çekileceğini belirler.</small>
                </div>
                <div class="col-md-6 d-flex align-items-center mt-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="Table.IsActive" />
                        <label class="form-check-label">Aktif (Okuma başlasın)</label>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-between">
                <a asp-page="Index" class="btn btn-secondary">Geri Dön</a>
                <button type="submit" class="btn btn-warning">Güncelle</button>
            </div>
        </form>
    </div>
</div>
