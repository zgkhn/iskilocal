@page
@model IndustrialDataManagement.Pages.Tables.DeleteModel
@{
    ViewData["Title"] = "Tablo Sil";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-4">
                    <h3 class="text-danger mb-3"><i class="bi bi-trash3 me-2"></i>Tablo Silme Onayı</h3>
                    <p class="text-muted">Aşağıdaki izleme tablosunu silmek istediğinizden emin misiniz? <strong>Bu işlem tabloya bağlı tüm tag'leri de silecektir!</strong></p>
                    
                    <div class="bg-light p-3 rounded-3 mb-4">
                        <div class="mb-2"><strong>Tablo Adı:</strong> @Model.TableToDelete?.Name</div>
                        <div><strong>Polling Süresi:</strong> @Model.TableToDelete?.PollingIntervalMs ms</div>
                    </div>

                    <form method="post">
                        <input type="hidden" asp-for="TableToDelete!.Id" name="id" />
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger px-4">Evet, Sil</button>
                            <a asp-page="./Index" class="btn btn-light px-4">Vazgeç</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
